@using SweetHome.Utils;
@model IEnumerable<SweetHome.Models.Shelter>
	<div class="shelters-container">
		<div class="shelters-container__content">
			@foreach(var shelter in Model)
			{
				@if(shelter.Name != "Частная передержка"){
					<div class="shelter-card">
						<div class="shelter-card__images">
							<div class="img"
							 style="background-image: url('@shelter.ImageUrl');"
							 title="1">
							</div>
							<div class="shelter-card__links-container">
								<div class="shelter-card__link">
								  <a class="shelter-card__link-shade"></a>
								  <div>
										<img src="/images/LAPA.png" style="width: 50px; height: 50px; display: block; margin: 0 auto;"/>
										<span>Наши животные </span>
								  </div>
								</div>
								<div class="shelter-card__link">
									<a class="shelter-card__link-shade" href="https://vk.com/priutdrug74" target="_blank"></a>
									<div>
										<img src="http://thedkmodels.com/vk.jpg" style="width: 50px; height: 50px; display: block; margin: 0 auto;"/>
										<span>Группа вконтакте </span>
									</div>
								</div>
								@if(shelter.Name == "Друг")
								  {
									  <div class="shelter-card__link">
											<a class="shelter-card__link-shade" href="http://priutdrug74.ru" target="_blank"></a>
											<div>
												<img src="/images/WEB.png" style="width: 50px; height: 50px; display: block; margin: 0 auto;"/>
												<span>Веб-сайт</span>
											</div>
										</div>
								  }

							</div>
						</div>
						<div class="shelter-card__description">
								 @if(shelter.Name == "Хочу домой")
								  {
									  <h2><a class="shelter-card__name" href="/Shelters/HochuDomoi">@shelter.Name</a></h2>
								  }
								  @if(shelter.Name == "Лучик надежды")
								  {
									  <h2><a class="shelter-card__name" href="/Shelters/LuchikNadejdy" target="_blank" >@shelter.Name</a></h2>
								  }
								  @if(shelter.Name == "Друг")
								  {
									  <h2 style="margin-top:0px;"><a class="shelter-card__name" href="/Shelters/Drug" target="_blank" >@shelter.Name</a></h2>
								  }
								  @if(shelter.Name == "Холли")
								  {
									  <h2><a class="shelter-card__name" href="/Shelters/Holly" target="_blank" >@shelter.Name</a></h2>
								  }


							  <div class="shelter-card__phone">
								  @shelter.Phones.PhonesList();
							  </div>
							  <div class="shelter-card__text">
								  @shelter.Info
							  </div>
						</div>
					</div>
				}
			}
		</div>
	</div>
